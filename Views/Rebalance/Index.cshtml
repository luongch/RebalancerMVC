@model RebalancerMVC.Models.EtfViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add ETF</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etfs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etfs[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etfs[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etfs[0].Percentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var etf in Model.Etfs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => etf.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => etf.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => etf.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => etf.Percentage)
            </td>
        </tr>
        }
    </tbody>
</table>