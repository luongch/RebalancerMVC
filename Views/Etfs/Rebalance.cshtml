@model ResultViewModel

@{ ViewData["Title"] = "Rebalance Results"; }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Action)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => result.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => result.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => result.Action)
                </td>
            </tr>
        }
    </tbody>

</table>

